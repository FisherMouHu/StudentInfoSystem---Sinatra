<h3>Student Information</h3>
<form action="/students/<%= @student.id %>" method="POST">
    <input type="hidden" name="_method" value="delete"/>
    <p class="left">Student ID : <%= @student.id %></p>
    <p class="left">FirstName : <%= @student.firstname %></p>
    <p class="left">LastName : <%= @student.lastname %></p>
    <p class="left">Gender : <%= @student.gender %></p>
    <p class="left">Birthday : <%= @student.birthday %></p>
    <p class="left">Address : <%= @student.address %></p>
    <p class="left">Email : <%= @student.email %></p>
    <p class="left">Phone Number : <%= @student.phonenumber %></p>
    <p class="left">GPA : <%= @student.gpa || "( None )" %></p>
    <center>
        <button type="submit" name="delete" style="width: 100px">Delete</button>
    </center>
</form>
<center>
    <a href="/students/<%= @student.id %>/edit">
        <button type="button" name="edit" style="width: 100px">Edit</button>
    </a>
</center>